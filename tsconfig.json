{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDirs": [
      "./src",
    ],
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@/components/*": ["src/components/*"],
      "@/containers/*": ["src/containers/*"],
      "@/templates/*": ["src/templates/*"],
      "@/layout": ["src/containers/layout"],
      "@/images/*": ["src/images/*"],
      "@/types": ["src/types"],
      "@/hooks/*": ["src/hooks/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/styles/*": ["src/styles/*"],
      "@/styled": ["stitches.config.js"],
    }
  }
}